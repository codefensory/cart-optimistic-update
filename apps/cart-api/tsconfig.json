{
  "compilerOptions": {
    "target": "es2017",
    "paths": {
      "@App": ["./src"],
      "@Modules": ["./src/module"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
